.loginBox .logoBox {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.loginBox .logoBox .logoimg {
  width: 160rpx;
  height: 140rpx;
}
.loginBox .logoBox .logoText {
  width: 420rpx;
  height: 220rpx;
}
.loginBox .logoBox .logoFont text {
  display: block;
  font-family: 'lishu';
}
.loginBox form .formBox {
  border-TOP: 1rpx solid #f0f0f1;
  border-bottom: 1rpx solid #f0f0f1;
  padding: 20rpx 40rpx;
  margin: 40rpx 0rpx;
}
.loginBox form .formBox .specialBorder {
  border-bottom: 1px solid #E5E5E5;
}
.loginBox form .formBox .uni-form-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.loginBox form .formBox .uni-form-item .uni-input {
  background: white;
  margin-left: 20rpx;
}
.loginBox form .formBox .uni-form-item .phoneIcon {
  width: 36rpx;
  height: 44rpx;
}
.loginBox form .formBox .uni-form-item .passwordIcon {
  width: 36rpx;
  height: 40rpx;
}
.loginBox form .radiobox {
  padding: 0rpx 40rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  box-sizing: border-box;
}
.loginBox form .radiobox text {
  color: #636366;
}
.loginBox form .btnBox {
  padding: 0rpx 40rpx;
  margin-top: 40rpx;
}
.loginBox form .btnBox button {
  background: #409eff;
  color: #FFFFFF;
}
.loginBox form .btnBox button:nth-child(2) {
  background: #cccccc;
  margin-top: 40rpx;
}

